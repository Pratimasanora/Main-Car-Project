@model  CarServiceMVCProject.Models.Car
@{
    ViewBag.Title = "NEW CAR";
}

<h2>New Car</h2>

@using (Html.BeginForm("EditCar", "Home"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.VIN)
        @Html.TextBoxFor(m => m.VIN, new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.VIN, "Please enter valid VIn", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Model)
        @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Model, "Please enter  Model" +
       "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Style)
        @Html.TextBoxFor(m => m.Style, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Style, "Please enter valid Style", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Company)
        @Html.TextBoxFor(m => m.Company, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Company, "Please enter valid Company Name", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Color)
        @Html.TextBoxFor(m => m.Color, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Color, "Please enter valid Color Name", new { @class = "text-danger" })
    </div>
    @Html.HiddenFor(m=> m.Id)
    @Html.ValidationSummary()
    @Html.HiddenFor(m => m.ApplicationUserId)
    <button class="btn btn-primary" type="submit">Save</button>
}



@model  CarServiceMVCProject.ViewModels.CustomerCarViewModel
@{
    ViewBag.Title = "ViewCars";
}

<h2>View Cars</h2>
<div id="CustomerDetailsDiv">
    <table class="table table-bordered table-hover table-responsive table-striped"  style="background-color:white"   >
        <tr>
            <td>FirstName:</td>
            <td><span>@Model.ApplicationUser.FirstName</span></td>
        </tr>
        <tr>
            <td>LastName:</td>
            <td>@Model.ApplicationUser.LastName</td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>@Model.ApplicationUser.Email</td>
        </tr>
        @*<tr>
            <td>Address:</td>
            <td>@Model.ApplicationUser.Address @Model.ApplicationUser.City @Model.Customers.PostalCode</td>
        </tr>*@

    </table>
</div>

@Html.ActionLink("Add New Car", "AddNewCarForm", Model.ApplicationUser, new { @class = "btn" })

<div id="CarDetailsDiv">
    <table class="table  table-bordered table-hover table-responsive table-striped"  style="background-color:white" >
        <tr>
            <th>Id</th>
            <th>VIN</th>
            <th>Model</th>
            <th>Style</th>
            <th>Company</th>
            <th>Color</th>
            <th></th>
        </tr>
        @foreach (var item in Model.Cars)
        {
            if (item.ApplicationUserId == Model.ApplicationUser.Id)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.VIN</td>
                    <td>@item.Model</td>
                    <td>@item.Style</td>
                    <td>@item.Company</td>
                    <td>@item.Color</td>
                    <td>@Html.ActionLink(" ViewServices", "ViewServices", item, new { @class = "btn btn-primary fa-info-circle" })
                    @Html.ActionLink("EditCar ", "EditCarForm", item, new { @class = "btn btn-success fa fa-edit" })
                    @Html.ActionLink("Delete ", "DeleteCar", item, new { @class = "btn btn-danger fa fa-trash" })</td>
                </tr>
            }

        }
    </table>
</div>



